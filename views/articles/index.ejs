<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width= , initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Blog Site</title>
</head>
<body>
    <div class="mx-5 flex flex-col justify-start">
        <h1 class="my-3 text-3xl font-bold">Blog Articles</h1>
        <a href="/articles/new" class="p-3 text-center text-white bg-slate-800 w-32">New Article</a>
        <% articles.forEach((article) => { %>
            <div class="my-5 p-3 flex flex-col border-2 border-black">
                <div class="flex flex-col">
                    <h1 class="text-3xl py-4"><%= article.title %></h1>
                    <h3 class="text-small text-gray-300 py-3"><%= article.createdAt.toLocaleDateString() %></h3>
                    <h3 class="text-lg py-3"><%= article.description %></h3>
                    <div class="flex">
                        <a href="/articles/<%= article.slug %>" class="p-2 w-fit text-white bg-blue-600 rounded-lg">Read More</a>
                        <form action="/articles/<%= article.id %>?_method=DELETE" method="POST">
                            <button type="submit" class="p-2 ml-5 text-white bg-red-600 rounded-lg">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</body>
</html>